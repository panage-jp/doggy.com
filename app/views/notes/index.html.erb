<%= render partial: "/modules/header"%>


<div class="notes grandPart">
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">

    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="/images/dogs.jpg" alt="第1スライド">
      </div><!-- /.carousel-item -->
      <div class="carousel-item">
        <img class="d-block w-100" src="/images/puppy2.jpg" alt="第2スライド">
      </div><!-- /.carousel-item -->
      <div class="carousel-item">
        <img class="d-block w-100" src="/images/pag.jpg" alt="第3スライド">
      </div>
      <!-- スライドコントロールの設定 -->
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">前へ</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">次へ</span>
      </a>
    </div>
  </div>


  <div class="main1 container-fluid">
    <div class="titles">
      <em class="h1">Pickup Dogs</em>
    </div>

    <div class="row ">
      <div class="col-xs-0 col-sm-2 col-md-2 cards">
      </div>

      <%@dogs.each_with_index do |dog,index|%>
      <div class="col-xs-2 col-sm-6 col-md-2 cards">
        <%=link_to user_path(dog.user.id),class: "card picked_dog" do%>
        <%= image_tag dog.avatar.variant(combine_options:{resize:"200x200^",crop:"200x200+0+0",gravity: :center}).processed%>
        <div class="card-img-overlay hide">
          <img class="arrow_icon" src="/images/arrow_icon.png">
          <h5 class="card-title">@<%=dog.user.name%></h5>
          <p class="card-text"><small><%=dog.name%></small></p>
        </div>
        <%end%>
      </div>
      <%if index == 3%>
      <%break%>
      <%end%>
      <%end%>

    </div>
    <div class="row row-underline" id="media_hide">
      <div class="col-xs-0 col-sm-2 col-md-2 cards">
      </div>

      <%@dogs[4..7].each_with_index do |dog,index|%>
      <div class="col-xs-2 col-sm-6 col-md-2 cards">
        <%=link_to user_path(dog.user.id),class: "card picked_dog" do%>
        <%= image_tag dog.avatar.variant(combine_options:{resize:"200x200^",crop:"200x200+0+0",gravity: :center}).processed%>
        <div class="card-img-overlay hide">
          <img class="arrow_icon" src="/images/arrow_icon.png">
          <h5 class="card-title">@<%=dog.user.name%></h5>
          <p class="card-text"><small><%=dog.name%></small></p>
        </div>
        <%end%>
      </div>
      <%if index == 3%>
      <%break%>
      <%end%>
      <%end%>


    </div>

  </div>

  <div class="main2 container">
    <div class="titles">
      <em class="h1">人気ユーザー</em>
    </div>
    <div class="row">

