<%= render partial: "/modules/header"%>
<div class="post grandPart">
  <div class="container-fluid post__mainContent">

    <div class="row post_row ">
      <div class="col-xs-0 col-sm-0 col-md-1 ">
      </div>

      <div class="post_row_left col-xs-12 col-sm-12 col-md-2 ">
        <%if current_user%>
        <div class="post__user">

          <%unless current_user.avatar.attached?%>
          <i class="fas fa-user-circle fa-3x"></i>
          <%else%>
          <%= image_tag current_user.avatar.variant(combine_options:{resize:"50x50^",crop:"50x50+0+0",gravity: :center}).processed, class: "avatar-large"%>
          <%end%>

          <div class="post__user-name">
            <p class="post__user-name_user"><%=current_user.name%></p>
            <p class="post__user-name_dog">Dog_name</p>
          </div>

        </div>
        <%end%>
        <div class="post__pickedUser">
          <%if @users%>
          <div class="post__pickedUser-title">
            <p class="osusume">おすすめ</p>
            <a href="/users" class="subete">すべて見る</a>
          </div>

          <div class="post__pickedUser-user">
            <%unless @users[0].avatar.attached?%>
            <i class="fas fa-user-circle fa-2x"></i>
            <%else%>
            <%= image_tag @users[0].avatar.variant(combine_options:{resize:"32x32^",crop:"32x32+0+0",gravity: :center}).processed, class: "avatar-large"%>
            <%end%>
            <%=link_to "#{@users[0].name}",user_path(@users[0].id),class: "user_name"%>
          </div>

          <div class="post__pickedUser-user">
            <%unless @users[1].avatar.attached?%>
            <i class="fas fa-user-circle fa-2x"></i>
            <%else%>
            <%= image_tag @users[1].avatar.variant(combine_options:{resize:"32x32^",crop:"32x32+0+0",gravity: :center}).processed, class: "avatar-large"%>
            <%end%>
            <%=link_to "#{@users[1].name}",user_path(@users[1].id),class: "user_name"%>
          </div>
          <div class="post__pickedUser-user">
            <%unless @users[2].avatar.attached?%>
            <i class="fas fa-user-circle fa-2x"></i>
            <%else%>
            <%= image_tag @users[2].avatar.variant(combine_options:{resize:"32x32^",crop:"32x32+0+0",gravity: :center}).processed, class: "avatar-large"%>
            <%end%>
            <%=link_to "#{@users[2].name}",user_path(@users[2].id),class: "user_name"%>
          </div>
          <%end%>
        </div>
      </div>
      <div class="post_row_right col-xs-12 col-sm-6 ">
        <%@posts.each_with_index do |post,id|%>
        <%= render partial: "postContent", locals: {id: id, post: post}%>
        <%end%>
      </div>

    </div>
  </div>
</div>

<%= render partial:"/modules/footer"%>
